{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "../",
        "paths": {
            "*": [
                "node_modules/*",
            ],
            "src": [
                "src",
            ],
            "src/*": [
                "src/*",
            ],
        },
        "types": [
            "jest",
            "jest-extended",
        ],
        "allowJs": true,
    },
    "include": [
        "../tests/**/*.ts",
        "../tests/**/*.js",
    ],
}
